<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="8dp"
    android:background="#A4DAE0"
    android:layout_marginBottom="8dp"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/tvResourceTitle"
        android:layout_width="402dp"
        android:layout_height="58dp"
        android:fontFamily="cursive"
        android:text="Resource Title"

        android:textAlignment="center"
        android:textSize="40sp"

        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="4dp"
        tools:layout_editor_absoluteY="16dp" />

    <TextView
        android:id="@+id/tvResourceDescription"
        android:layout_width="358dp"
        android:layout_height="55dp"
        android:background="#C0C1F49A"
        android:text=" Resource Description"
        android:textColor="#01021A"
        android:textSize="20sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="25dp"
        tools:layout_editor_absoluteY="105dp" />

    <Button
        android:id="@+id/btnOpenResource"
        android:layout_width="192dp"
        android:layout_height="55dp"
        android:background="#EFE5B1"
        android:fontFamily="monospace"
        android:text="Open Resource"
        android:textSize="18sp"
        tools:ignore="HardcodedText,MissingConstraints"
        tools:layout_editor_absoluteX="100dp"
        tools:layout_editor_absoluteY="173dp" />


</androidx.constraintlayout.widget.ConstraintLayout>